snippet once "Include header once only guard"
#ifndef TAJGA_${1:`!p
if not snip.c:
	import string
	snip.rv = re.sub(r'[^A-Za-z0-9]+','_', path).upper()
	i = snip.rv.find("_SRC_")
	if i != -1:
		snip.rv = snip.rv[i+5:]
else:
	snip.rv = snip.c`}_
#define TAJGA_$1_

${VISUAL}${0}

#endif /* TAJGA_$1_ */

